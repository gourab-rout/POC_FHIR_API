     <http:listener-config name="api-httpListenerConfig" host="0.0.0.0" port="8081" doc:name="HTTP Listener Configuration"/>
    <apikit:config name="api-config" raml="api.raml" consoleEnabled="false" doc:name="Router"/>
    <http:request-config name="HTTP_Request_Configuration" protocol="HTTPS" host="api.fitbit.com" port="443"  connectionIdleTimeout="60000" doc:name="HTTP Request Configuration"/>
    <http:listener-config name="HTTP_Listener_Configuration_Fitbit" host="0.0.0.0" port="8080" doc:name="HTTP Listener Configuration"/>

    <flow name="get:/fitbit/heartrate:api-config">
        <http:listener config-ref="api-httpListenerConfig" path="/api/fitbit" doc:name="HTTP"/>
        
        <logger message="&quot;HTTP Method=&quot;+#[message.inboundProperties['http.method']]" level="INFO" doc:name="Logger"/>
        <http:static-resource-handler resourceBase="${app.home}" defaultFile="FitBitLogin.html" doc:name="HTTP Static Resource Handler"/>

    </flow>
    <flow name="apiFlow">
        <http:listener config-ref="HTTP_Listener_Configuration_Fitbit" path="/redirect" doc:name="HTTP"/>
        <logger message="#[payload],#[payload.Date]" level="INFO" doc:name="Logger"/>
        <set-variable variableName="logprefix" value="#[message.id]" doc:name="Variable"/>
        <logger message="#[flowVars.logprefix] - Requesting heart rate for the Date - #[message.inboundProperties.'http.query.params'.date] and period - #[message.inboundProperties.'http.query.params'.period] " level="INFO" doc:name="Logger"/>
        <http:request config-ref="HTTP_Request_Configuration" path="/1/user/5GF2LW/activities/heart/date/#[payload.Date]/#[payload.Period].json" method="GET" doc:name="HTTP">
